{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "repository": "git@github.com:Blackwh1te/middle.messenger.praktikum.yandex.git",
  "author": "a.lamkov <a.lamkov@vk.team>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "start": "yarn build && node server.js",
    "dev": "concurrently \"yarn serve\" \"sleep 1 && yarn watch\" \"sleep 8 && yarn open\"",
    "build": "parcel build 'static/*.html'",
    "watch": "parcel watch 'static/*.html'",
    "serve": "pkill node & node server.js",
    "open": "open http://localhost:3000",
    "lint": "yarn eslint && yarn stylelint",
    "eslint": "eslint \"**/*.{ts,tsx}\"",
    "stylelint": "stylelint \"**/*.pcss\"",
    "test": "NODE_PATH=./src mocha --require ts-node/register --require tsconfig-paths/register --require ./mochaSetup.js './src/**/*.test.{ts,tsx}'"
  },
  "devDependencies": {
    "@atlascommunity/eslint-config": "^1.2.0",
    "@atlascommunity/prettier-config": "^1.0.4",
    "@babel/core": "7.12.0",
    "@babel/preset-react": "7.18.6",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/react-dom": "^18.0.11",
    "@types/sinon": "^10.0.14",
    "chai": "^4.3.7",
    "concurrently": "7.6.0",
    "eslint": "^8.36.0",
    "events": "^3.3.0",
    "express": "4.18.2",
    "jsdom": "^21.1.1",
    "mocha": "^10.2.0",
    "parcel": "2.8.3",
    "parcel-reporter-static-files-copy": "^1.5.0",
    "parcel-resolver-tspaths": "^0.0.9",
    "path-browserify": "1.0.0",
    "postcss": "8.4.21",
    "postcss-custom-media": "9.1.2",
    "postcss-easy-import": "4.0.0",
    "postcss-mixins": "9.0.4",
    "postcss-nested": "6.0.1",
    "process": "0.11.10",
    "sinon": "^15.0.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "xmlhttprequest": "^1.8.0"
  },
  "staticFiles": {
    "staticPath": "public"
  },
  "eslintConfig": {
    "extends": [
      "@atlascommunity/eslint-config"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/jsx-no-useless-fragment": "off",
      "react/button-has-type": "off",
      "react/jsx-key": "off",
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ],
      "security/detect-non-literal-regexp": "off",
      "class-methods-use-this": [
        "error",
        {
          "enforceForClassFields": false
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^jsxToDOM"
        }
      ],
      "no-constructor-return": "off",
      "no-restricted-globals": "off",
      "security/detect-unsafe-regex": "off",
      "no-alert": "off",
      "react/no-unknown-property": "off"
    }
  },
  "prettier": "@atlascommunity/prettier-config"
}
