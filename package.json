{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "repository": "git@github.com:Blackwh1te/middle.messenger.praktikum.yandex.git",
  "author": "a.lamkov <a.lamkov@vk.team>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "start": "webpack s --mode development",
    "build": "webpack --mode production",
    "serve": "yarn build && node server.js",
    "test": "NODE_PATH=./src mocha --require ts-node/register --require tsconfig-paths/register --require ./mochaSetup.js './src/**/*.test.{ts,tsx}'",
    "lint": "yarn eslint && yarn stylelint",
    "eslint": "eslint \"**/*.{ts,tsx}\"",
    "stylelint": "stylelint \"**/*.pcss\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn-run-all test lint"
    }
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.pcss": "stylelint"
  },
  "dependencies": {
    "postcss-import": "15.1.0",
    "postcss-preset-env": "8.3.2"
  },
  "devDependencies": {
    "@atlascommunity/eslint-config": "1.2.0",
    "@atlascommunity/prettier-config": "1.0.4",
    "@babel/core": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@types/chai": "4.3.4",
    "@types/jsdom": "21.1.1",
    "@types/mocha": "10.0.1",
    "@types/react-dom": "18.0.11",
    "chai": "4.3.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.36.0",
    "express": "4.18.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.1",
    "husky": "^8.0.3",
    "jsdom": "21.1.1",
    "lint-staged": "^13.2.2",
    "mini-css-extract-plugin": "2.7.5",
    "mocha": "10.2.0",
    "postcss": "8.4.23",
    "postcss-custom-media": "9.1.3",
    "postcss-easy-import": "4.0.0",
    "postcss-loader": "7.2.4",
    "postcss-mixins": "9.0.4",
    "postcss-nested": "6.0.1",
    "stylelint": "15.6.1",
    "stylelint-config-standard": "33.0.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths-webpack-plugin": "4.0.1",
    "typescript": "4.9.5",
    "webpack": "5.81.0",
    "webpack-cli": "5.0.2",
    "webpack-dev-server": "4.13.3",
    "xmlhttprequest": "1.8.0",
    "yarn-run-all": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "@atlascommunity/eslint-config"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/jsx-no-useless-fragment": "off",
      "react/button-has-type": "off",
      "react/jsx-key": "off",
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ],
      "security/detect-non-literal-regexp": "off",
      "class-methods-use-this": [
        "error",
        {
          "enforceForClassFields": false
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "jsxToDOM"
        }
      ],
      "no-constructor-return": "off",
      "no-restricted-globals": "off",
      "security/detect-unsafe-regex": "off",
      "no-alert": "off",
      "react/no-unknown-property": "off"
    }
  },
  "prettier": "@atlascommunity/prettier-config"
}
